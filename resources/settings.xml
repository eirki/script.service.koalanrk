<settings>
<category label="Watch">
    <setting label="Watch NRK1" action="RunScript(script.service.koalanrk, mode=play, action=nrk1)" type="action" option="close"/>
    <setting label="Watch NRK2" action="RunScript(script.service.koalanrk, mode=play, action=nrk2)" type="action" option="close"/>
    <setting label="Watch NRK3" action="RunScript(script.service.koalanrk, mode=play, action=nrk3)" type="action" option="close"/>
    <setting label="Watch NRK Super" action="RunScript(script.service.koalanrk, mode=play, action=nrksuper)" type="action" option="close"/>
    <setting label="Browse tv.nrk.no" action="RunScript(script.service.koalanetflix, mode=play, action=browse)" type="action"  option="close"/>
</category>

<category label="Update">
    <setting label="Check My List for added/removed movies or TV shows" action="RunScript(script.service.koalanrk, mode=library, action=watchlist)" type="action"  option="close"/>
    <setting label="Check single show for added/removed episodes" action="RunScript(script.service.koalanrk, mode=library, action=update_single)" type="action"  option="close"/>
    <setting label="Check all shows for added/removed episodes" action="RunScript(script.service.koalanrk, mode=library, action=update_all)" type="action"  option="close"/>
    <setting label="Exclude show from library" action="RunScript(script.service.koalanrk, mode=library, action=exclude_show)" type="action"  option="close"/>
    <setting label="Readd show to library" action="RunScript(script.service.koalanrk, mode=library, action=readd_show)" type="action"  option="close"/>
    <setting label="Exclude movie from library" action="RunScript(script.service.koalanrk, mode=library, action=exclude_movie)" type="action"  option="close"/>
    <setting label="Readd movie to library" action="RunScript(script.service.koalanrk, mode=library, action=readd_movie)" type="action"  option="close"/>
</category>

<category label="Settings">
  <setting label="Playback" type="lsep"/>
    <setting label="Browser" id="browser" type="labelenum" values="Chrome|Internet Explorer" />
    <setting label="Enable remote control" id="remote" type="bool" default="false" />
    <setting label="Configure remote control" action="RunScript(script.service.koalanrk, mode=setting, action=configureremote)" type="action" enable="eq(-1,true)" option="close" subsetting="true"/>
  <setting label="Startup" type="lsep"/>
    <setting label="Use multithreading when updating library" id="multithreading" type="bool" default="true" />
    <setting label="Check for added/removed movies, TV shows and episodes on startup" id="watchlist on startup" type="bool" default="true"/>
    <setting label="Check stored TV shows for added/removed episodes on startup" id="shows on startup" type="bool" default="false" enable="eq(-1,true)"/>
    <setting label="No. of TV shows to check" id="n shows to update" default="10"  option="int" range="0,1,20" type="slider"  enable="eq(-1,true) + eq(-2,true)"/>
    <setting label="Prioritize shows (always checked in startup process)" action="RunScript(script.service.koalanrk, mode=library, action=prioritize)" type="action" option="close" enable="eq(-2,true) + eq(-3,true)"/>
    <setting label="Show progress notification" id="startupnotification" type="bool" default="true" enable="eq(-4,true)"/>
</category>

<category label="Setup">
  <setting label="Username" id="username"  type="text"/>
  <setting label="Password" id="password"  type="text" option="hidden"/>
  <setting label="Use Custom Library Path" default="false" id="usecustomLibPath" type="bool" />
  <setting label="Library Path" default="special://profile/addon_data/script.service.koalanrk/Library" enable="eq(-1,true)" id="LibPath" option="writeable" type="folder" />
</category>

<category label="Debug">
  <setting label="Remove all shows and movies from library" action="RunScript(script.service.koalanrk, mode=library, action=remove_all)" type="action"  option="close"/>
  <setting label="Delete cookies" action="RunScript(script.service.koalanrk, mode=setting, action=deletecookies)" type="action" />
  <setting label="Refresh Settings" action="RunScript(script.service.koalanrk, mode=setting, action=refreshsettings)" type="action"  option="close" />
  <setting label="Test action" action="RunScript(script.service.koalanrk, mode=setting, action=test)" type="action" option="close"/>
  <setting label="Run startup process" action="RunScript(script.service.koalanrk, mode=library, action=startup)" type="action"  option="close"/>
</category>

</settings>
